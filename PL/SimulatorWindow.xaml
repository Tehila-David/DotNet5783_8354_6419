<Window x:Class="PL.SimulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Closing="Window_Closing"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        
        Title="SimulatorWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="373*"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="End_of_simulation" Content="End of simulation"   HorizontalAlignment="Left" Margin="568,338,0,0" Grid.Row="1" VerticalAlignment="Top"  Height="43" Width="146" />
        <TextBlock x:Name="txtClock" Text="00:00:00"  FontSize="30" Margin="330,32,291,330" Grid.Row="1" RenderTransformOrigin="0.254,0.297"/>
        <TextBlock x:Name="curOrder" Text="Current Order" FontSize="40" Margin="260,97,211,250" Grid.Row="1"/>
        <TextBlock x:Name="prevStatus" Text="Previous status:" FontSize="20" Margin="185,182,416,190" Grid.Row="1"/>
        <TextBlock x:Name="nextStatus" Text="Next status:" FontSize="20" Margin="465,177,171,195" Grid.Row="1"/>
        <TextBlock x:Name="begTime" Text="Begin time:" FontSize="20" Margin="185,227,451,145" Grid.Row="1" RenderTransformOrigin="0.476,0.665"/>
        <TextBlock x:Name="endTime" Text="Estimated end time:" FontSize="20" Margin="465,222,96,145" Grid.Row="1"/>

    </Grid>
</Window>

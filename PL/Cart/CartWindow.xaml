<Window x:Class="PL.Cart.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:bo="clr-namespace:PL.Cart" 
        mc:Ignorable="d"
        Title="CartWindow" Height="450" Width="800">



    <Grid >
        <DataGrid x:Name="OrderItem" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="124,49,114,177" RowDetailsVisibilityMode="VisibleWhenSelected">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="cityColumn" Binding="{Binding Name}" Header="Name:" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="iDColumn" Binding="{Binding Amount}" Header="Amount:" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="numberColumn" Binding="{Binding Price}" Header="Price:" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="personalStatusColumn" Binding="{Binding TotalPrice}" Header="TotalPrice:" Width="SizeToHeader"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnUpdate" Content="Update Product" HorizontalAlignment="Left" Margin="180,292,0,0" VerticalAlignment="Top" Width="100" Click="UpdateProduct_Click" Height="19"/>
        <Button x:Name="btnNew" Content="Remove Product" HorizontalAlignment="Left" Margin="447,291,0,0" VerticalAlignment="Top" Width="75" Click="RemoveProduct_Click"/>
    </Grid>

</Window>

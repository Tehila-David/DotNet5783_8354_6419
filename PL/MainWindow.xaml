<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="myButtonStyle" TargetType="Button"
>
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="373*"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Name="Manager" Content="Manager" Style="{StaticResource myButtonStyle}" HorizontalAlignment="Left" Margin="45,84,0,0" Grid.Row="1" VerticalAlignment="Top"  Height="42" Width="134" ClickMode="Press" Click="Manager_Click" />
        <Button Name="New_Order" Content="New Order" Style="{StaticResource myButtonStyle}" HorizontalAlignment="Left" Margin="46,141,0,0" Grid.Row="1" VerticalAlignment="Top"  Height="39" Width="132" Click="NewOrder_Click"/>
        <Button Name="Order_Tracking" Content="Order Tracking" Style="{StaticResource myButtonStyle}" HorizontalAlignment="Left" Margin="46,199,0,0" Grid.Row="1" VerticalAlignment="Top" Height="38" Width="196" Click="OrderTracking_Click"/>
        <Button Name="Products_List"  Content="Products List" Style="{StaticResource myButtonStyle}" HorizontalAlignment="Left" Margin="253,145,0,0" Grid.Row="1" VerticalAlignment="Top"  Height="41" Width="159" Click="ProductsList_Click" />
        <Button Name="Orders_List" Content="Orders List" Style="{StaticResource myButtonStyle}" HorizontalAlignment="Left" Margin="430,146,0,0" Grid.Row="1" VerticalAlignment="Top"  Height="40" Width="175" Click="OrdersList_Click" />

    </Grid>
</Window>
